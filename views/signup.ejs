<!DOCTYPE html>
<html>
    <head>
        <title>Signup</title>
        <% include ./partials/head %>
    </head>
    <body class="container">
        <section id="form">
            <h1>Create a new account</h1>
            <hr/>
            <form action="/user" method="post">
                <div class="form-group">
                    <input id="form_username" type="text" placeholder="Username" name="username" />
                </div>
                <div class="form-group">
                    <input id="form_email" type="email" placeholder="Email" name="email" />
                </div>
                <div class="form-group">
                    <input id="form_password" type="password" placeholder="Password" name="password" />
                </div>
                <button class="btn btn-primary btn-block" type="submit" value="Submit">Signup</button>
            </form>
        </section>
    </body>
</html>